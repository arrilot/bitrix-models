  "require": {
    "php": ">=5.6.4",
    "illuminate/support": "5.*|6.*|7.*",
    "illuminate/pagination": "5.*|6.*|7.*"
  },
  "suggest": {
    "arrilot/bitrix-blade": "To render pagination views using ->links()",
