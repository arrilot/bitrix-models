    "illuminate/events": "5.*|6.*|7.* to use events in Eloquent models"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.0",
    "mockery/mockery": "~1"
  },
  "autoload": {
    "psr-4": {
      "Arrilot\\BitrixModels\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Arrilot\\Tests\\BitrixModels\\": "tests/"
    }
  }
